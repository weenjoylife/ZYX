.titile{
  font-size: 19px;
  color: red;
  font-weight: bold;
  font-family: Arial, Helvetica, sans-serif;
}

.fengeV{
  width: 100%;
  height: 20px;
  background-color: black;
}

.fengeV:hover{
  animation:fengeV_KF 2s ;
  animation-iteration-count: infinite;
  background-color: red;
}

@keyframes fengeV_KF{
  0%{
    background-color: lightgray;
  }

  50%{
     background-color: red;
  }

  80%{
     background-color: lightseagreen;
  }
}